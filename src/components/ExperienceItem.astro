---
import type { JSX } from "astro/jsx-runtime";
import "../components/styles/experienceItems.css";

export interface Props {
    company: string;
    roles: Role[];
}

export interface Role {
    title: string;
    date: string;
    description: string;
    tags?: { name: string; icon: JSX.Element }[];
}

export interface CompanyExperience {
    icompany: string;
    roles: Role[];
}

const { company, roles } = Astro.props;
---

<div class="company-experience mb-10">
    <h2
        class="company-title text-2xl font-bold text-gray-900 dark:text-yellow-200 mb-4"
    >
        {company}
    </h2>

    <div class="roles">
        {
            roles.map((role) => (
                <div class="role mb-6 relative">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-yellow-200">
                        {role.title} <span class="separator">|</span>{" "}
                        <span class="role-date">{role.date}</span>
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mt-4">
                        {role.description}
                    </p>

                    {role.tags && (
                        <div class="flex flex-wrap mt-3">
                            {role.tags.map((tag) => (
                                <span class="px-2 py-1 mr-2 mb-2 text-sm font-medium text-gray-900 bg-gray-200 rounded-full dark:bg-gray-700 dark:text-gray-200 hover:bg-white/5 hover:scale-110 transition duration-200 text-xs md:text-base">
                                    <tag.icon class="inline-block mr-1 icon-hover-effect" />
                                </span>
                            ))}
                        </div>
                    )}
                </div>
            ))
        }
    </div>
</div>
