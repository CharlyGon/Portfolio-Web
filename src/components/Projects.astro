---
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import GitHubIcon from "./icons/GitHub.astro";
import LinkButton from "./LinkButton.astro";
import WebIcon from "./icons/WebIcon.astro";

const TAGS = {
    ASTRO: {
        name: "Astro",
        class: "bg-black text-white",
        icon: AstroIcon,
    },
    TAILWIND: {
        name: "Tailwind",
        class: "bg-white text-[#73bcf6]",
        icon: TailwindIcon,
    },
};

const PROJECTS = [
    {
        title: "Web Profolio",
        description:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam euismod, nisl eget ultricies aliquam, nunc nisl aliquet nunc, vitae aliquam nisl nunc eu nisl. ",
        image: "/projects/web.webp",
        tags: [TAGS.ASTRO, TAGS.TAILWIND],
        link: "https://google.com",
        github: "https://github.com",
    },
    {
        title: "Web Profolio",
        description:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam euismod, nisl eget ultricies aliquam, nunc nisl aliquet nunc, vitae aliquam nisl nunc eu nisl. ",
        image: "/projects/web.webp",
        tags: [TAGS.ASTRO, TAGS.TAILWIND],
        link: "https://google.com",
    },
];
---

<section class="flex flex-col gap-y-16">
{
    PROJECTS.map(({ image, title, description, tags, link, github}) => (
        <article>
            <h3 class=" text-2xl font-semibold text-yellow-200 mb-2">
                {title}
            </h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class=" flex gap-x-2 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs${tag.class} py-1 px-2`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10s"
                src={image}
                alt={title}
            />
            <footer class="flex gap-x-4 items-end justify-start mt-4 mb-8">
                {github && (
                    <LinkButton href={github}>
                        <GitHubIcon class="size-6" />
                        Ver c√≥digo fuente
                    </LinkButton>
                )}
                <LinkButton href={link}>
                    <WebIcon class="size-6" />
                    Ir al sitio web
                </LinkButton>
            </footer>
        </article>
    ))
}
</section>
